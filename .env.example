# CloudCraft Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Transaction pooler (port 6543) - for application queries
DATABASE_URL="postgresql://postgres.[your-project-ref]:[your-password]@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Session pooler (port 5432) - for Prisma migrations
DIRECT_URL="postgresql://postgres.[your-project-ref]:[your-password]@aws-1-us-east-1.pooler.supabase.com:5432/postgres"

# ===========================================
# PTERODACTYL PANEL
# ===========================================
# Your Pterodactyl Panel URL
PTERODACTYL_URL=http://your-panel-ip:8081

# Application API Key (Admin -> API Keys -> Create New)
# Used for: Creating users, servers, managing allocations
PTERODACTYL_ADMIN_KEY=ptla_your_admin_api_key_here

# Client API Key (Account -> API Credentials)
# Used for: Console access, sending commands, file management
PTERODACTYL_CLIENT_KEY=ptlc_your_client_api_key_here

# ===========================================
# PTERODACTYL SERVER CONFIGURATION
# ===========================================
# Minecraft Egg ID (Admin -> Nests -> Minecraft -> Your Egg)
PTERODACTYL_MINECRAFT_EGG_ID=3

# Minecraft Nest ID (Admin -> Nests)
PTERODACTYL_MINECRAFT_NEST_ID=1

# Default Location ID (Admin -> Locations)
PTERODACTYL_DEFAULT_LOCATION=1
